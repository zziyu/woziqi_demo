/* pages/game/game.wxss */
/** 棋盘的每一列 */
.chess-board {
  display:flex;
  flex-direction: column;  /* 主轴为垂直方向，起点在上端 */
}

/** 棋盘的每一行 */
.chess-board .row {
  display: flex;
  flex-direction: row;  /* 主轴为水平方向，起点在左端 */
  height:100%;
}

/** 棋盘的每一个格 */
.chess-board .cell {
  border:1px solid #0e0d0d;
  flex:1;
}

.step-tip {
  border:1px solid #f53b3b;
  position:absolute;
}

/** 状态栏 */
.chess-statu-bar {
  margin-top:10px;
  margin-left:10px;
  margin-right:10px;
  height:40px;
  display:flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

/** 当前的棋子存放的容器 */
.chess-curr-man-bar {
  height:100%;
  width:45px;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/** 当前的棋子 */
.chess-curr-man {
  width:25px;
  height:25px;
  border:1px solid #000000;
  border-radius:25px;
}

/** 操作按钮样式 */
.chess-operate-bar {
  flex:1;
  height:80%;
  width: 80%;
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.win-message {
  color: red;
  font-size: 20px;
}

page {
  background-color: rgb(247, 245, 165);
}